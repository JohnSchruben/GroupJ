<Window x:Class="SafeSkate.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SafeSkate.Desktop"
        DataContext="{Binding MainWindowViewModel, Source={StaticResource Locator}}"
        mc:Ignorable="d"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <DockPanel>
                <wv2:WebView2 x:Name="webView" MinHeight="550" MinWidth="550" NavigationCompleted="webView_NavigationCompleted"/>
                <ListView DockPanel.Dock="Right" ItemsSource="{Binding MarkerCollection}" MinWidth="300" ScrollViewer.VerticalScrollBarVisibility="auto"/>
            </DockPanel>
            <Button DockPanel.Dock="Bottom" Command="{Binding AddMarkerCommand}" Content="Add"/>
        </StackPanel>
    </Grid>
</Window>
