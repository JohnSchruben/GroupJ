<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ss="clr-namespace:SafeSkate;assembly=SafeSkate"
             xmlns:local="clr-namespace:SafeSkate.Mobile"
             x:Class="SafeSkate.Mobile.AddMarkerView"
             Title="NewPage1" IsVisible="{Binding Visibility, FallbackValue=false}">
    <VerticalStackLayout>
        <Entry
          MaxLength="20"
          Text="{Binding Uploader, Mode=TwoWay}" />
        <StackLayout>
            <StackLayout.Resources>
                <local:ComparisonConverter x:Key="ComparisonConverter" />
            </StackLayout.Resources>
            <RadioButton IsChecked="{Binding Path=Severity, Converter={StaticResource ComparisonConverter}, ConverterParameter='1'}" Content="Low"/>
            <RadioButton IsChecked="{Binding Path=Severity, Converter={StaticResource ComparisonConverter}, ConverterParameter='2'}" Content="Medium"/>
            <RadioButton IsChecked="{Binding Path=Severity, Converter={StaticResource ComparisonConverter}, ConverterParameter='3'}" Content="High"/>
            <RadioButton IsChecked="{Binding Path=Severity, Converter={StaticResource ComparisonConverter}, ConverterParameter='4'}" Content="Ultra"/>
        </StackLayout>
        <Button Clicked="Button_Clicked" Text="Upload"></Button>
    </VerticalStackLayout>
</ContentPage>